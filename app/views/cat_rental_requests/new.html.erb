<form action="/cat_rental_requests" method="post">

  <label for="cat_id">Cat:</label>
  <select id="cat_id" name="cat_rental_request[cat_id]">
    <option disabled selected>Select a cat</option>
    <% Cat.all.each do |cat| %>
    <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>

  <br>

  <label for="start_date">Start date:</label>
  <input id="start_date" type="date" name="cat_rental_request[start_date]" value="<%= Date.today %>">

  <br>

  <label for="end_date">End date:</label>
  <input id="end_date" type="date" name="cat_rental_request[end_date]" value="<%= Date.tomorrow %>">

  <br>

  <input type="submit" value="Submit rental request">
</form>
