<h1><%= @cat.name %></h1>

<table>
  <tr>
    <td>Birth date:</td>
    <td><%= @cat.birth_date %></td>
  </tr>
  <tr>
    <td>Age:</td>
    <td><%= @cat.age_string %></td>
  </tr>
  <tr>
    <td>Color:</td>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <td>Sex:</td>
    <td><%= @cat.sex %></td>
  </tr>
  <% unless @cat.without_description? %>
  <tr>
    <td>Description:</td>
    <td><%= @cat.description %></td>
  </tr>
  <% end %>
</table>
